<h1>Tasks#new</h1>
<p>Find me in app/views/cloths/new.html.erb</p>
<div style="width: 300px;">
  <%= form_for(@cloth) do |f| %>
  <div>
    <%= f.file_field :photo %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.select :category, [["アウター", "0"], ["トップス", "1"],["ボトムス", "2"],["ワンピース", "3"],["シューズ", "4"],["アクセサリー", "5"]],  :prompt => "選択してください" %>
  </div>
  <div>
    <%= f.label :color %>
    <%= f.select :color, [["黒", "0"], ["白", "1"], ["グレー", "2"], ["赤", "3"], ["黄色", "4"], ["緑", "5"], ["青", "6"], ["紫", "7"]],  :prompt => "選択してください" %>
  </div>

    <%= f.submit 'Submit' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', cloths_url %></p>
